# OpenZiti Configuration
ZITI_IMAGE=openziti/ziti-controller
ZITI_VERSION=latest
ZITI_CTRL_NAME=ziti-controller
ZITI_CTRL_ADVERTISED_ADDRESS=ziti-controller.example.com
ZITI_CTRL_EDGE_ADVERTISED_ADDRESS=ziti-edge-controller.example.com
ZITI_CTRL_EDGE_ADVERTISED_PORT=1280
ZITI_CTRL_ADVERTISED_PORT=6262
ZITI_CTRL_EDGE_IP_OVERRIDE=0.0.0.0
ZITI_EDGE_IDENTITY_ENROLLMENT_DURATION=180m
ZITI_ROUTER_ENROLLMENT_DURATION=180m
ZITI_USER=admin

# Ziti Router Configuration
ZITI_ROUTER_NAME=ziti-edge-router
ZITI_ROUTER_ADVERTISED_ADDRESS=ziti-edge-router.example.com
ZITI_ROUTER_PORT=3022
ZITI_ROUTER_LISTENER_BIND_PORT=10080

# Ziti Console Configuration
ZITI_CONSOLE_HOSTNAME=ziti-console.example.com

# Bootstrap Configuration
ZITI_BOOTSTRAP_IMAGE=openziti/ziti-bootstrap
ZITI_BOOTSTRAP_VERSION=latest

# Keycloak Configuration
KEYCLOAK_HOSTNAME=keycloak.example.com
KEYCLOAK_URL=https://keycloak.example.com
KEYCLOAK_REALM=openziti

# SPIRE Configuration
TRUST_DOMAIN=openziti.local
SPIRE_SERVER_ADDRESS=spire-server:8081

# Domain Configuration (for Caddy labels)
DOMAIN_NAME=example.com
SUBDOMAIN=ziti
