version: '3.2'

services:
  agent:
    image: portainer/agent:2.27.1
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /var/lib/docker/volumes:/var/lib/docker/volumes
    networks:
      - agent_network
    deploy:
      mode: global
      placement:
        constraints: [node.platform.os == linux]

  portainer:
    image: portainer/portainer-ce:2.27.1
    command: -H tcp://tasks.agent:9001 --tlsskipverify
{% if not caddy %}
    ports:
      - "9443:9443"
      - "9000:9000"
      - "8000:8000"
{% endif %}
    volumes:
      - portainer_data:/data
    networks:
      - agent_network
{% if caddy %}
      - caddy_caddy
{% endif %}
    deploy:
      mode: replicated
      replicas: 1
      placement:
        constraints: [node.role == manager]
{% if caddy %}
      labels:
        caddy: portainer.{{domain}}
        # this include escape for ansible
        caddy.reverse_proxy: "{{ '{{' }}upstreams 9000{{ '}}' }}"
        caddy.authorize: with admins_policy
{% endif %}

networks:
  agent_network:
    driver: overlay
    attachable: true
  # caddy network allow gain access via caddy reverse proxy and auth
{% if caddy %}
  caddy_caddy:
    external: true
{% endif %}


volumes:
  portainer_data:
